---
import Header from "@/sections/Header.astro";
import "../styles/global.css";
---

<script is:inline>
    const getThemePreference = () => {
        if (
            typeof localStorage !== "undefined" &&
            localStorage.getItem("theme")
        ) {
            return localStorage.getItem("theme");
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light";
    };
    const isDark = getThemePreference() === "dark";
    document.documentElement.classList[isDark ? "add" : "remove"]("dark");

    if (typeof localStorage !== "undefined") {
        const observer = new MutationObserver(() => {
            const isDark = document.documentElement.classList.contains("dark");
            localStorage.setItem("theme", isDark ? "dark" : "light");
        });
        observer.observe(document.documentElement, {
            attributes: true,
            attributeFilter: ["class"],
        });
    }
</script>

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <meta name="theme-color" content="#FEF7EE" />
        <title>
            Óscar Rodríguez | Fullstack Developer, SaaS Builder & Tech Learner
        </title>
        <meta
            name="description"
            content="Soy Óscar, desarrollador fullstack apasionado por crear interfaces limpias y experiencias digitales que marquen diferencia."
        />
    </head>
    <Header />
    <body>
        <slot />
    </body>
</html>

<style is:global>
    html {
        font-family: "General Sans", sans-serif;
    }
</style>
